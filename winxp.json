        "scripts/wget-win32-static.zip",
        "scripts/extract_wget_zip.vbs",
        "scripts/setup_winrm.bat",
		"scripts/AHCI-SATA/*"
		],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "18"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--ioapic",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--paravirtprovider",
